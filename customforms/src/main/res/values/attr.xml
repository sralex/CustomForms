<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="hasBackground" format="boolean"></attr>
    <attr name="label" format="string"></attr>
    <attr name="iconAlignment" format="enum">
        <enum name="left" value="0"/>
        <enum name="right" value="1"/>
    </attr>
    <declare-styleable name="CustomEditText">
        <attr name="inputHint" format="string" />
        <attr name="custominputType" format="string" />
        <attr name="customIcon"  format="string"  />
        <attr name="iconFocusColor" format="string" />
        <attr name="label" />
        <attr name="hasBackground" />
        <attr name="iconAlignment" />
        <attr name="iconColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="CustomColorPicker">
        <attr name="android:text" />
        <attr name="android:color" />
        <attr name="label" />
        <attr name="hasBackground" />
        <attr name="iconAlignment" />
    </declare-styleable>
</resources>