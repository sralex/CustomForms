<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_custom_edit_padding_top"
    android:paddingBottom="@dimen/item_custom_edit_padding_bottom"
    android:paddingLeft="@dimen/item_custom_edit_padding_left"
    android:paddingRight="@dimen/item_custom_edit_padding_right"
    android:id="@+id/item_custom_edit_text_input_content"
    >
    <TextView
        android:id="@+id/item_custom_edit_text_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="@color/titleColor"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/item_input_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        />
    <EditText
        android:maxLines="1"
        android:background="@drawable/edit_text_design"
        android:id="@+id/item_input_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#313131"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_input_show_password"
        android:layout_toRightOf="@+id/item_input_icon"
        android:layout_toEndOf="@+id/item_input_icon" />

    <ImageView
        android:id="@+id/item_input_show_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>