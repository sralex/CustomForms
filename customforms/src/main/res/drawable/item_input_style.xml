<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">

    <shape
        android:shape="rectangle" >
            <solid
                android:color="#FFF" >
            </solid>
        <!-- view border color and width -->
        <stroke
            android:width="0.2dp"
            android:color="#cfcfcf" >
        </stroke>

        <!-- The radius makes the corners rounded -->
        <corners
            android:radius="2dp"   >
        </corners>
        <padding
            android:top="10dp"
            android:bottom="10dp"/>
    </shape>
</item>
</layer-list>